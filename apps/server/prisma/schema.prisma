// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mahasiswa {
  npm          String     @id @unique
  nama_lengkap String
  jurusan      Jurusan[]
  semester     Semester[]
  password     String
}

model Mata_Kuliah {
  id          Int        @id @default(autoincrement())
  nama_matkul String
  sks         Int
  jurusan     Jurusan[]
  semester    Semester[]
  dosen       Dosen[]
  jadwal      Jadwal[]
}

model Jurusan {
  id           Int           @id @default(autoincrement())
  nama_jurusan String        @unique
  mata_kuliah  Mata_Kuliah[]
  mahasiswa    Mahasiswa[]
  jadwal       Jadwal[]
}

model Semester {
  id          Int           @id @default(autoincrement())
  semester_ke String        @unique
  mata_kuliah Mata_Kuliah[]
  mahasiswa   Mahasiswa[]
  jadwal      Jadwal[]
}

model Dosen {
  id          Int           @id @default(autoincrement())
  nama_dosen  String
  mata_kuliah Mata_Kuliah[]
  jadwal      Jadwal[]
}

model TahunAkademik {
  id       Int      @id @default(autoincrement())
  tahun    String
  semester String
  jadwal   Jadwal[]
}

model Jadwal {
  id             Int             @id @default(autoincrement())
  tahun_akademik TahunAkademik[]
  jurusan        Jurusan[]
  semester       Semester[]
  kelas          String
  hari           String
  mata_kuliah    Mata_Kuliah[]
  jam            String
  dosen          Dosen[]
  ruangan        String
}

// if change model dont reset database, u can use @default()

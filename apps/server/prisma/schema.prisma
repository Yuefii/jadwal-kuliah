// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mahasiswa {
  id           Int        @id @default(autoincrement())
  npm          String     @unique
  password     String
  nama_lengkap String
  jurusan      Jurusan[]
  semester     Semester[]
}

model Mata_Kuliah {
  id          Int        @id @default(autoincrement())
  nama_matkul String
  sks         Int
  jurusan     Jurusan[]
  semester    Semester[]
  dosen       Dosen[]
}

model Jurusan {
  id           Int           @id @default(autoincrement())
  nama_jurusan String
  mata_kuliah  Mata_Kuliah[]
  mahasiswa    Mahasiswa[]
}

model Semester {
  id          Int           @id @default(autoincrement())
  semester    String 
  mata_kuliah Mata_Kuliah[]
  mahasiswa   Mahasiswa[]
}

model Dosen {
  id          Int           @id @default(autoincrement())
  nama_dosen  String
  mata_kuliah Mata_Kuliah[]
}



// if change model dont reset database, u can use @default()
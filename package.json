  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "client:install": "cd apps/client && npm install",
    "server:install": "cd apps/client && npm install",
    "dev:client": "cd apps/client && npx next dev",
    "dev:mobile": "cd apps/mobile && npx expo start --clear",
    "dev:server": "cd apps/server && npm run dev",
    "docker": "cd apps/server && docker-compose up -d",
    "docker-stop": "cd apps/server && docker-compose down",
    "db:push": "cd apps/server && npx prisma db push",
    "db:migrate": "cd apps/server && npx prisma migrate dev",
    "db:studio": "cd apps/server && npx prisma studio"
  },
  "workspaces": [
    "apps/*"
  ]
}
